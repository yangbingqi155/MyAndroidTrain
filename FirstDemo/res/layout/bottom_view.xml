<Button 
    android:id="@+id/btn_account"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/account_bottom_button"
    />
<Button 
    android:id="@+id/btn_cart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/cart_bottom_button"
